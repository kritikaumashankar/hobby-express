<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>
    <h1 class ='center'>My Hobbies</h1>
    <hr />
    <div class='row'>
      <div class='col s12 m4'>
        <h3>Add Hobbies</h3>
        <form action='/hobbies' method='post'>
          <input type='text' name='title' placeholder='Enter your Hobbies' />
          <button class='btn btn-floating btn-large waves-effect waves-light red' type='submit'>+</button>
        </form>
      </div>
      <table class='table col m8 s12 striped'>
        <thead>
          <th>Title</th>
          <th>X</th>
          </thead>
          <tbody>
            <% hobbies.forEach( function(hobby) { %>
              <% var url = "/hobbies/" + hobby.id + "?_method=DELETE" %>
              <% var editURL = "/hobbies/" + hobby.id +"/edit" %>
              <tr>
                <td><%= hobby.title %></td>
                <td>
                  <a class="btn" href=<%= editURL %>>Edit</a>
                </td>
                <td>
                  <form method="POST" action=<%= url %>>
                    <button class="btn red">Delete</button>
                  </form>
                </td>

           <% }); %>
              </tr>
          </tbody>
        </thead>
      </table>
    </div>
  </body>
</html>